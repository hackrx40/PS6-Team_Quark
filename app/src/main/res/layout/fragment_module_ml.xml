<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".module_ml">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="40dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/mlgym"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:background="#a5bacf"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Your ML Partner"
                    android:textSize="35sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#FFFEFE"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Make use of our ML based gamified module to validate your postures"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:textColor="#FFFEFE"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    app:cardCornerRadius="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Validate!"
                        android:textSize="20sp"
                        android:textColor="#006777"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_bold"/>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>