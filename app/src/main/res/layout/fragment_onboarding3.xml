<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentclass.Onboarding2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/animate"
            android:layout_marginTop="0dp"
            app:lottie_rawRes="@raw/workout_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <TextView
            android:id="@+id/headertxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="400dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_vertical"
            android:text="Train with Correct Posture"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/brieftxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headertxt"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/poppins_thin"
            android:gravity="center_vertical"
            android:text="Body Posture's has a vital role to hinder your injuries and to target your muscles more effeciently"
            android:textColor="@color/black"
            android:textSize="17sp" />




    </RelativeLayout>

</FrameLayout>